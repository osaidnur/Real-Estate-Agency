<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/palette2">
    <item>
        <layer-list>
            <!-- Shadow -->
            <item android:top="2dp" android:left="2dp" android:right="2dp" android:bottom="4dp">
                <shape android:shape="rectangle">
                    <solid android:color="#40000000" />
                    <corners android:radius="14dp" />
                </shape>
            </item>
            
            <!-- Main button -->
            <item android:top="0dp" android:left="0dp" android:right="2dp" android:bottom="2dp">
                <shape android:shape="rectangle">
                    <gradient
                        android:startColor="@color/palette1"
                        android:endColor="@color/palette2"
                        android:angle="45"
                        android:type="linear" />
                    <corners android:radius="14dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</ripple>
