<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow layer -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#20000000"
                android:endColor="#05000000"
                android:angle="45" />
            <corners android:radius="16dp" />
        </shape>
    </item>
    
    <!-- Main card background -->
    <item android:top="2dp" android:left="2dp" android:right="4dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/admin_surface" />
            <corners android:radius="14dp" />
            <stroke android:width="1dp" android:color="@color/admin_accent_light" />
        </shape>
    </item>
</layer-list>
