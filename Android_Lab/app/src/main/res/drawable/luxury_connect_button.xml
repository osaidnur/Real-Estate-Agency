<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#D32F2F"
                android:endColor="#F44336"
                android:angle="135" />
            <corners android:radius="25dp" />
            <stroke
                android:width="2dp"
                android:color="#FFCDD2" />
            <padding
                android:left="16dp"
                android:top="12dp"
                android:right="16dp"
                android:bottom="12dp" />
        </shape>
    </item>
    
    <!-- Normal state -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#E53935"
                android:endColor="#FF5722"
                android:angle="135" />
            <corners android:radius="25dp" />
            <stroke
                android:width="2dp"
                android:color="#FFFFFF"
                android:dashWidth="0dp" />
            <padding
                android:left="16dp"
                android:top="12dp"
                android:right="16dp"
                android:bottom="12dp" />
        </shape>
    </item>
</selector>
