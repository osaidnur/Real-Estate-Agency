<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/admin_property_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Property Title and Type -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/admin_property_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Property Title"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/primary_text" />

            <TextView
                android:id="@+id/admin_property_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Apartment"
                android:textSize="14sp"
                android:textColor="@color/secondary_text"
                android:background="@drawable/type_background"
                android:padding="4dp"
                android:layout_marginStart="8dp" />

        </LinearLayout>

        <!-- Location -->
        <TextView
            android:id="@+id/admin_property_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="City, Country"
            android:textSize="14sp"
            android:textColor="@color/secondary_text"
            android:drawableStart="@drawable/ic_location"
            android:drawablePadding="4dp"
            android:layout_marginBottom="8dp" />

        <!-- Price Information -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/admin_property_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="$250,000"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/price_color" />

        </LinearLayout>

        <!-- Special Offer Status -->
        <TextView
            android:id="@+id/admin_property_special_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SPECIAL OFFER: 15% OFF"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/special_offer_text"
            android:background="@color/special_offer_background"
            android:padding="8dp"
            android:gravity="center"
            android:layout_marginBottom="8dp"
            android:visibility="gone" />

        <!-- Discounted Price -->
        <TextView
            android:id="@+id/admin_property_discounted_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Discounted: $212,500"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/discount_price_color"
            android:layout_marginBottom="8dp"
            android:visibility="gone" />

        <!-- Property Details -->
        <TextView
            android:id="@+id/admin_property_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3 bed • 2 bath • 1200 sq ft"
            android:textSize="14sp"
            android:textColor="@color/secondary_text"
            android:layout_marginBottom="8dp" />

        <!-- Description -->
        <TextView
            android:id="@+id/admin_property_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Property description goes here..."
            android:textSize="14sp"
            android:textColor="@color/secondary_text"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginBottom="12dp" />

        <!-- Action Button -->
        <Button
            android:id="@+id/btn_admin_special_offer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Special Offer"
            android:background="@drawable/button_background"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:padding="12dp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
