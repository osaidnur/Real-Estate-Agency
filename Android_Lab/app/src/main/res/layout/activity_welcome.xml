<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Background image -->
    <ImageView
        android:id="@+id/bgImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_real_estate" />    <!-- Overlay color for contrast -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/elegant_welcome_overlay" />    <!-- Company Icon -->
    <ImageView
        android:id="@+id/companyIcon"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:src="@drawable/icon"
        android:contentDescription="Company Logo"
        android:elevation="8dp" /><!-- App Name -->
    <TextView
        android:id="@+id/appName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Luxora"
        android:textColor="@android:color/white"
        android:textSize="36sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/companyIcon"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/brillant"
        android:shadowColor="#40000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="4"
        android:letterSpacing="0.05"
        />    <!-- Connect Button -->
    <TextView
        android:id="@+id/btnConnect"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:text="Connect"
        android:textColor="#F3F3E0"
        android:background="@drawable/transparent_palette1_button"
        android:elevation="16dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:fontFamily="@font/facultyglyphic_regular"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/appName"
        android:layout_marginTop="50dp"
        android:letterSpacing="0.15"
        android:gravity="center"
        android:includeFontPadding="false"
        android:clickable="true"
        android:focusable="true"
        android:shadowColor="#40000000"
        android:shadowDx="2"
        android:shadowDy="4"
        android:shadowRadius="8" />    <!-- Developer Names -->
    <TextView
        android:id="@+id/developerNames"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:text="Osaid Nur â€¢ Doaa Hatu"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        android:fontFamily="@font/miracle_history"
        android:letterSpacing="0.05"
        android:shadowColor="#40000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="4"
        android:gravity="center" />

    <!-- Credits Label -->
    <TextView
        android:id="@+id/creditsLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/developerNames"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:text="Developed by"
        android:textColor="#E0E0E0"
        android:textSize="12sp"
        android:textStyle="normal"
        android:fontFamily="@font/facultyglyphic_regular"
        android:letterSpacing="0.1"
        android:alpha="0.8"
        android:shadowColor="#40000000"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="2" />

</RelativeLayout>
