<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_blog"
    android:padding="24dp">

    <!-- Title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Customer Management"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/olivera_demo"
        android:background="@drawable/oval_heading_background"
        android:paddingVertical="10dp"
        android:paddingHorizontal="20dp"
        android:layout_marginBottom="16dp"
        android:gravity="center" />

    <!-- Customers RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/customers_recycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Empty state text -->
    <TextView
        android:id="@+id/empty_customers_text"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="No customers found."
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/olivera_demo"
        android:gravity="center"
        android:visibility="gone" />

</LinearLayout>
