<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_blog">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_marginBottom="48dp"
            android:layout_marginHorizontal="16dp"
            android:elevation="6dp"
            android:background="@drawable/luxora_background">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="LUXORA"
                android:textSize="42sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:fontFamily="@font/brillant"
                android:shadowColor="#80000000"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="4"
                android:gravity="center"
                android:layout_gravity="center"/>
        </FrameLayout>

        <TextView
            android:id="@+id/about_us_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="About Us"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:background="@drawable/oval_heading_background"
            android:paddingVertical="10dp"
            android:paddingHorizontal="20dp"
            android:fontFamily="@font/olivera_demo"
            android:layout_marginBottom="16dp"
            android:layout_marginHorizontal="12dp"
            android:gravity="center"
            android:elevation="3dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:elevation="4dp"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/transparent_card_bg"
                android:padding="16dp">

                <TextView
                    android:id="@+id/about_us_content"
                    style="@style/RegularTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Welcome to Real Estate Hub! We are dedicated to helping you find your dream property with ease and confidence."
                    android:textColor="#333333"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/company_history_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Company History"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:background="@drawable/oval_heading_background"
            android:paddingVertical="10dp"
            android:paddingHorizontal="20dp"
            android:fontFamily="@font/olivera_demo"
            android:layout_marginBottom="16dp"
            android:layout_marginHorizontal="12dp"
            android:gravity="center"
            android:elevation="3dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="4dp"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/transparent_card_bg"
                android:padding="16dp">

                <TextView
                    android:id="@+id/company_history_content"
                    style="@style/RegularTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Founded in 2010, Real Estate Hub has grown to become a trusted name in the property market, offering a wide range of residential and commercial properties. Our mission is to provide exceptional service and value to our clients."
                    android:textColor="#333333"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>

