<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardBackgroundColor="@color/admin_background_light"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Rank Circle -->
        <TextView
            android:id="@+id/tv_rank"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/circular_background"
            android:backgroundTint="@color/stat_blue"
            android:text="#1"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:layout_marginEnd="16dp" />

        <!-- Country Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_country_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ‡µðŸ‡¸ Palestine"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/admin_text_primary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Customers"
                android:textSize="12sp"
                android:textColor="@color/admin_text_secondary"
                android:layout_marginTop="2dp" />
        </LinearLayout>

        <!-- Customer Count -->
        <TextView
            android:id="@+id/tv_customer_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="25"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/stat_blue" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
