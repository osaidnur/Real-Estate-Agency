<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/bg_blog">

    <!-- Header -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Special Offers Management"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/olivera_demo"
        android:background="@drawable/oval_heading_background"
        android:paddingVertical="10dp"
        android:paddingHorizontal="20dp"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- Special Offers RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/admin_special_offers_recycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="vertical"
        android:visibility="gone" />

    <!-- Empty state view -->
    <TextView
        android:id="@+id/admin_special_offers_empty_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="No special offers found.\nAdd special offers from the Properties section."
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/olivera_demo"
        android:gravity="center"
        android:drawableTop="@drawable/ic_star"
        android:drawablePadding="16dp"
        android:visibility="visible" />

</LinearLayout>
