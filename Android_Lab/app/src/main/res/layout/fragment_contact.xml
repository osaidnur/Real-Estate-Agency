<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_real_estate_back3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="24dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contact Us"
            style="@style/TitleTextStyle"
            android:gravity="center"
            android:layout_marginBottom="24dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="4dp"
            app:cardCornerRadius="12dp"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="16dp">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/ic_home"
                    android:layout_marginBottom="16dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Real Estate Hub Agency"
                    style="@style/SubtitleTextStyle"
                    android:gravity="center"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Your trusted partner in finding the perfect property"
                    style="@style/RegularTextStyle"
                    android:gravity="center"
                    android:layout_marginBottom="8dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="4dp"
            app:cardCornerRadius="12dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Get In Touch"
                    style="@style/SubtitleTextStyle"
                    android:gravity="center"
                    android:layout_marginBottom="16dp"/>                <Button
                    android:id="@+id/btn_call"
                    style="@style/AppButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Call Us (+970599000000)"
                    android:drawableLeft="@drawable/ic_phone"
                    android:padding="16dp"
                    android:layout_marginBottom="12dp"/>                <Button
                    android:id="@+id/btn_email"
                    style="@style/AppButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Email Us (RealEstateHub@agency.com)"
                    android:drawableLeft="@drawable/ic_mail"
                    android:padding="16dp"
                    android:layout_marginBottom="12dp"/>

                <Button
                    android:id="@+id/btn_locate"
                    style="@style/AppButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Locate Us on Maps"
                    android:drawableLeft="@drawable/ic_location"
                    android:padding="16dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="We're available Monday through Friday, 9:00 AM - 5:00 PM"
            style="@style/RegularTextStyle"
            android:gravity="center"
            android:layout_marginTop="16dp"/>
    </LinearLayout>
</ScrollView>
