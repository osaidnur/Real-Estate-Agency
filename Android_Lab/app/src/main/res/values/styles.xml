<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--  Base application theme  -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!--  Title text style with Olivera Demo font  -->
    <style name="TitleTextStyle">
        <item name="android:fontFamily">@font/olivera_demo</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#283E51</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>
    <!--  Subtitle text style with Olivera Demo font  -->
    <style name="SubtitleTextStyle">
        <item name="android:fontFamily">@font/olivera_demo</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#283E51</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>
    <!--  Regular text style with Olivera Demo font  -->
    <style name="RegularTextStyle">
        <item name="android:fontFamily">@font/olivera_demo</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#333333</item>
    </style>
    <!--  Button style for a consistent look  -->
    <style name="AppButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:fontFamily">@font/olivera_demo</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">12dp</item>
        <item name="backgroundTint">#283E51</item>
        <item name="cornerRadius">8dp</item>
    </style>
    <!--  Input field style with Olivera Demo font  -->
    <style name="AppInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextColor">#283E51</item>
        <item name="boxStrokeColor">#283E51</item>
        <item name="android:textColorHint">#80283E51</item>
    </style>
    <style name="InputFieldStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:background">@drawable/rounded_edittext</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>
    <style name="SpinnerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:background">@drawable/rounded_spinner</item>
    </style>
</resources>
