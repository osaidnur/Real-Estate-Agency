<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--  Base application theme  -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!--  Title text style with Olivera Demo font  -->
    <style name="TitleTextStyle">
        <item name="android:fontFamily">@font/olivera_demo</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#283E51</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>
    <!--  Subtitle text style with Olivera Demo font  -->
    <style name="SubtitleTextStyle">
        <item name="android:fontFamily">@font/olivera_demo</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#283E51</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>
    <!--  Regular text style with Olivera Demo font  -->
    <style name="RegularTextStyle">
        <item name="android:fontFamily">@font/olivera_demo</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#333333</item>
    </style>
    <!--  Reservation button style to match reserve button font  -->
    <style name="ReservationButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:fontFamily">@font/inter_variable_font_family</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:padding">14dp</item>
        <item name="backgroundTint">#374151</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:elevation">2dp</item>
    </style>

    <!--  Cancel reservation button style with red background  -->
    <style name="CancelReservationButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:fontFamily">@font/inter_variable_font_family</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:padding">14dp</item>
        <item name="backgroundTint">#DC2626</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:elevation">2dp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <!--  Button style for a consistent look  -->
    <style name="AppButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:fontFamily">@font/olivera_demo</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:padding">14dp</item>
        <item name="backgroundTint">#374151</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:elevation">2dp</item>
    </style>
    <!--  Input field style with Olivera Demo font  -->
    <style name="AppInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextColor">#283E51</item>
        <item name="boxStrokeColor">#283E51</item>
        <item name="android:textColorHint">#80283E51</item>
    </style>
    <style name="InputFieldStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:background">@drawable/rounded_edittext</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>
    <style name="SpinnerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:background">@drawable/rounded_spinner</item>
    </style>
    <!-- Admin Text Appearances -->
    <style name="AdminTextAppearance.Headline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:fontFamily">@font/olivera_demo</item>
        <item name="android:textColor">@color/admin_text_primary</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AdminTextAppearance.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:fontFamily">@font/olivera_demo</item>
        <item name="android:textColor">@color/admin_text_secondary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AdminTextAppearance.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:fontFamily">@font/olivera_demo</item>
        <item name="android:textColor">@color/admin_text_primary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Admin Widget Styles -->
    <style name="AdminButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:fontFamily">@font/olivera_demo</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">12dp</item>
        <item name="backgroundTint">@color/admin_primary</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="AdminInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextColor">@color/admin_secondary</item>
        <item name="boxStrokeColor">@color/admin_secondary</item>
        <item name="android:textColorHint">@color/admin_text_secondary</item>
        <item name="errorTextColor">@color/admin_error</item>
    </style>    <style name="AdminCardStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">2dp</item>
        <item name="cardBackgroundColor">@color/admin_surface</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="contentPadding">16dp</item>
    </style>    <!-- Admin Delete Button Style - Specific style for delete buttons -->
    <style name="AdminDeleteButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:fontFamily">@font</item>
        <item name="android:textSize">12sp</item>
        <item name="android:padding">8dp</item>
        <item name="backgroundTint">@color/admin_error</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="cornerRadius">4dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">32dp</item>
    </style>

    <!-- Customer Delete Button Style - Specific style for customer delete buttons -->    <style name="CustomerDeleteButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:fontFamily">@font/inter_variablefont_opsz_wght</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">8dp</item>
        <item name="backgroundTint">@android:color/holo_red_light</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="cornerRadius">4dp</item>
        <item name="android:minWidth">64dp</item>
        <item name="android:minHeight">32dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Customer Profile Styles with Professional Fonts -->
    <style name="CustomerButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:fontFamily">@font/inter_variablefont_opsz_wght</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">12dp</item>
        <item name="backgroundTint">#283E51</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="CustomerSecondaryButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:fontFamily">@font/inter_variablefont_opsz_wght</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">10dp</item>
        <item name="strokeColor">#283E51</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textColor">#283E51</item>
        <item name="android:textAllCaps">false</item>
    </style>    <!-- Enhanced Login/Register Input Style -->
    <style name="LoginInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextColor">@color/palette1</item>
        <item name="boxStrokeColor">@color/palette1</item>
        <item name="android:textColorHint">@color/admin_text_secondary</item>
        <item name="errorTextColor">@color/admin_error</item>        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>        <item name="boxStrokeWidth">2dp</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>    <!-- Login EditText Style -->
    <style name="LoginEditTextStyle">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/admin_text_primary</item>
        <item name="android:padding">12dp</item>
    </style>    <!-- Enhanced Login Button Style -->
    <style name="LoginButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:fontFamily">@font/facultyglyphic_regular</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">18dp</item>
        <item name="backgroundTint">@color/palette1</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:elevation">4dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:minHeight">56dp</item>
        <item name="android:letterSpacing">0.02</item>
    </style>    <!-- Login Title Style -->
    <style name="LoginTitleStyle">
        <item name="android:fontFamily">@font/facultyglyphic_regular</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/palette1</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:letterSpacing">0.02</item>
    </style>

    <!-- Login Subtitle Style -->
    <style name="LoginSubtitleStyle">
        <item name="android:fontFamily">@font/facultyglyphic_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/admin_text_secondary</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>

    <!-- Login Checkbox Style -->
    <style name="LoginCheckboxStyle">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/admin_text_secondary</item>
        <item name="android:buttonTint">@color/palette1</item>
    </style>

    <!-- Login Label Style -->
    <style name="LoginLabelStyle">
        <item name="android:fontFamily">@font/facultyglyphic_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/palette1</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <!-- Gold Accent Button Style (for special buttons) -->
    <style name="GoldAccentButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">12dp</item>
        <item name="strokeColor">@color/palette_gold</item>
        <item name="android:textColor">@color/palette_gold</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="strokeWidth">2dp</item>
    </style>    <!-- Gold Accent Text Style -->
    <style name="GoldAccentTextStyle">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/palette_gold</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Custom Tab Text Appearance with facultyglyphic_regular font -->
    <style name="CustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:fontFamily">@font/facultyglyphic_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
    </style>

</resources>
